{
  "manifest_version": 3,
  "name": "PR Reviewer",
  "version": "1.0.0",
  "description": "Extension pour reviewer automatiquement les pull requests GitHub avec Claude",
  "permissions": [
    "activeTab",
    "storage",
    "https://api.github.com/*",
    "https://api.anthropic.com/*"
  ],
  "host_permissions": [
    "https://github.com/*",
    "https://api.github.com/*",
    "https://api.anthropic.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/pull/*"],
      "js": ["content.js"],
      "run_at": "document_idle",
      "all_frames": false
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Claude PR Reviewer"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}